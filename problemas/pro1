struct racional
{
	int numerador;
	int denominador;
}

void reducao(racional & numero)
{
	
}

main
{
	racional x, y;
	int c;
	racional soma;

	escreva << ">>> Escreva o valor do numerador e do denominador de 'x': " << pulaLinha;

	leia >> x.numerador;
	leia >> x.denominador;

	escreva << ">>> Escreva o valor do numerador e do denominador de 'y': " << pulaLinha;

	leia >> y.numerador;
	leia >> y.denominador;

	escreva << ">>> Escreva o valor de 'c': " << pulaLinha;

	leia >> c;

	//elevar o x ao quadrado

	x.numerador = x.numerador * x.numerador;
	x.denominador = x.denominador * x.denominador;

	//subitrair
	soma.numerador = x.numerador * y.denominador - y.numerador * x.denominador;
	soma.denominador = x.denominador*y.numerador;

	reducao(soma);

	soma.numerador = soma.numerador + c * soma.denominador;

	reducao(soma);
}
